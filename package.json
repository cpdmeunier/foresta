{
  "name": "foresta-v2",
  "version": "2.0.0",
  "description": "Foresta V2 - Simulation narrative avec bot Telegram",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
