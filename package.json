    "db:reset": "supabase db reset"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.0",
    "@supabase/supabase-js": "^2.45.0",
    "dotenv": "^16.4.0",
    "telegraf": "^4.16.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
